    {
      "name": "Create Book (form-data with image)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "Belajar Laravel"
            },
            {
              "key": "author",
              "value": "Pak Budi"
            },
            {
              "key": "year",
              "value": "2025"
            },
            {
              "key": "stock",
              "value": "10"
            },
            {
              "key": "category_id",
              "value": "1"
            },
            {
              "key": "image",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8000/api/books",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8000",
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
